@page "{id:int}"
@model WebApplication1.Pages.Books.DeleteModel
@{
    ViewData["Title"] = "Delete Book";
}
<h1>Delete Book</h1>
<h3>Are you sure you want to delete this book?</h3>
<div>
    <strong>@Model.Book.title</strong> by @Model.Book.author_first_name @Model.Book.author_last_name
</div>
<form method="post">
    <input type="hidden" asp-for="Book.book_id" />
    <button type="submit">Delete</button>
    <a asp-page="Index">Cancel</a>
</form>